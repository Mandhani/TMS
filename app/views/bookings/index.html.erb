<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Tour</th>
      <th>Seats</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.tour.name %></td>
        <td><%= booking.quantity %></td>
        <td><%= booking.user.name %></td>
        <td><%= link_to 'Show', booking %></td>
        <% if User.find(current_user.id).user_type == 1 || current_user.id == booking.user_id %>
          <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

